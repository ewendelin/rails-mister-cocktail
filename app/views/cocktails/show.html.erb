<h2><%= @cocktail.name %></h2>
<%= cl_image_tag @article.photo, height: 300, width: 400, crop: :fill %>

<% @cocktail.doses.each do |dose| %>
  <p>
     <%= dose.description %>
     <%= dose.ingredient.name %>
     <%= link_to "Remove", dose_path(dose),
     method: :delete,
     data: {confirm: "really?"} %>

  </p>
<% end %>
 <p> <%= link_to "Back", cocktails_path %></p>
 <p> <%= link_to "Add dose", new_cocktail_dose_path(@cocktail) %></p>
